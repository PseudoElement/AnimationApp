{
    "version": 2,
    "builds": [
        {
            "src": "angular.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "npm run build"
            }
        },
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "buildCommand": "node server.js",
                "includeFiles": ["./server/db.json"]
            }
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "server.js" },
        {
            "src": ".*",
            "dest": "dist/root-web/index.html"
        }
    ]
}
